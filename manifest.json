{
  // Comments are accepted in the manifest, even though it is JSON.
  "manifest_version": 3,
  "name": "CLaw",
  "description": "ðŸš€ A chrome extension for Lawsnote that can help you analyze verdicts. ðŸš€",
  "version": "0.0.1",
  "icons": {
    "16": "logo/logo-16.png",
    "48": "logo/logo-48.png",
    "128": "logo/logo-128.png"
  },
  "options_page": "settings/settings.html",
  "action": {
    "default_title": "CLaw",
    "default_popup": "popup/popup.html"
  },
  "permissions": ["storage", "tabs"],
  "host_permissions": ["*://*/*"],
  "background": {
    "service_worker": "service-worker.js"
  },
  "content_scripts": [
    {
      "run_at": "document_end",
      "js": ["foreground.js"],
      "matches": ["https://lawsnote.com/*"]
    }
  ]
}
